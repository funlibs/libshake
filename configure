#!/bin/sh

# easy makefile
echo '
.PHONY: all clean_all

all:
	make -C build all

clean_all:
	rm -rf build; rm Makefile

%: 
	make -C build $@
' > Makefile

# cleanup build dir if exist
rm -rf build

# create Unix Makefiles project
mkdir build && cd build && cmake ..

echo
echo -n "You can now run \"make\"."
echo " Note that there is no \"install target\""
echo 
echo "Run \"make cargo_doc\" to generate the doc in the \"build/doc/\" directory."
echo

